{%extends 'layout/reporte.html.twig' %}
{% block titulo titulo_reporte|title %}
{%block contenido %}
    <div class="page-header">
    {% include 'reporte/encabezado.html.twig' %}
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th> Tipo TV </th>
                <th> Canal </th>
                <th> Indicador </th>
                <th> Categoria </th>
                <th> AMR</th>
                <th> AMR %</th>
                <th> SHR %</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td colspan="7"><b>Sexo</b></td>
            </tr>
            {% for valor in datos if valor.categoria == "SEXO" %}
            <tr>
                <td>{{ valor.tipo_tv }}</td>
                <td>{{ valor.canal }}</td>
                <td>{{ valor.indicador}}</td>
                <td>{{ valor.categoria }}</td>
                <td>{{ valor.miles|number_format(0,',','.') }}</td>
                <td>{{ valor.porcentaje_amr|number_format(2,',','.') }}</td>
                <td>{{ valor.porcentaje_shr|number_format(2,',','.')  }}</td>
            </tr>
            {% endfor %}
            <tr>
                <td colspan="7"><b>Clase Social</b></td>
            </tr>
            {% for valor in datos if valor.categoria == "CLASE SOCIAL" %}
            <tr>
                <td>{{ valor.tipo_tv }}</td>
                <td>{{ valor.canal }}</td>
                <td>{{ valor.indicador}}</td>
                <td>{{ valor.categoria }}</td>
                <td>{{ valor.miles|number_format(0,',','.') }}</td>
                <td>{{ valor.porcentaje_amr|number_format(2,',','.') }}</td>
                <td>{{ valor.porcentaje_shr|number_format(2,',','.')  }}</td>
            </tr>
            {% endfor %}
            <tr>
                <td colspan="7"><b>Edad</b></td>
            </tr>
            {% for valor in datos if valor.categoria == "EDAD" %}
            <tr>
                <td>{{ valor.tipo_tv }}</td>
                <td>{{ valor.canal }}</td>
                <td>{{ valor.indicador}}</td>
                <td>{{ valor.categoria }}</td>
                <td>{{ valor.miles|number_format(0,',','.') }}</td>
                <td>{{ valor.porcentaje_amr|number_format(2,',','.') }}</td>
                <td>{{ valor.porcentaje_shr|number_format(2,',','.')  }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock %}