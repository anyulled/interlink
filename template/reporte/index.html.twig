{% extends "layout/base.html.twig"%}
{%block titulo 'Listado de Reportes' %}
{%block contenido %}
<div class="well-small">

<h3>Listado de Reportes</h3>
<table class="table table-striped table-hover table-condensed">
    <tbody>
    {%for funcionalidad in funcionalidades if funcionalidad.GRUPO == "reporte" %}
        {% if not loop.first %}
        <tr>
            <th>{{ funcionalidad.NOMBRE|title }}</th>
            <td>
                <span>{{ funcionalidad.DESCRIPCION|capitalize }}</span>
            </td>
            <td>
                <a href="{{constant('URL_SISTEMA') ~ funcionalidad.URL }} " title="{{ funcionalidad.DESCRIPCION|capitalize }}" class="btn btn-primary btn-mini">Ver Reporte</a>
            </td>
        {% endif %}
        </tr>
    {%endfor%}
    </tbody>
    </table>
</div>
{% endblock %}