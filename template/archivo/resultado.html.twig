                        <td>{{ linea[6]}}</td>
                        <td>{{ linea[7]}}</td>
                        <td>{{ linea[8]}}</td>
                        <td>{{ linea[9]}}</td>
        {% endfor %}
                    </tr>
                </tbody>
            </table>
    {% endif %}
{% endif %}
{% endblock %}