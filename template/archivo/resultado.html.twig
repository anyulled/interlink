                    <th>ATS</th>
                </tr>
            </thead>
            <tbody>
        {% for linea in resultado %}
                    <tr>
                        <td>{{loop.index}}</td>
                        <td>{{ linea[1]}}</td>
                        <td>{{ linea[2]}}</td>
                        <td>{{ linea[3]|convert_encoding('UTF-8', 'iso-8859-1')}}</td>
